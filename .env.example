# ============================================
# üîß General Configuration
# ============================================

# Logging level: DEBUG | INFO | WARNING | ERROR | CRITICAL
LOGLEVEL=INFO

# Bot name
NAME=Emanuel

# Optional: Custom instructions or behavior hints. Available Placeholders: [#NAME] and [#DISCORD_ID]
INSTRUCTIONS="You are [#NAME]! Your Discord ID is [#DISCORD_ID]."

# Interface language: en or de
LANGUAGE=en

# ============================================
# ü§ñ Discord Integration
# ============================================

# Discord bot token (get this from https://discord.com/developers/applications)
DISCORD_TOKEN=YOUR_DISCORD_TOKEN_HERE

# Discord bot ID
DISCORD_ID=123456789123456789

# Optional: Discord user ID to notify (mention) when an error occurs.
# If not set, errors are handled internally.
HELP_DISCORD_ID=123456789123456788

# Optional: CSV file path with Discord usernames
USERNAMES_PATH=usernames.csv

# ============================================
# üß† AI Provider Settings
# ============================================

# Choose between "mistral" or "ollama"
AI=ollama

# --- Mistral ---
MISTRAL_API_KEY=YOUR_MISTRAL_API_KEY_HERE
MISTRAL_MODEL=mistral-medium-latest

# --- Ollama ---
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=gemma3:12b
OLLAMA_MODEL_TEMPERATURE=1
OLLAMA_KEEP_ALIVE=0s
OLLAMA_TIMEOUT=300

# Enable if using Ollama‚Äôs image generation model
OLLAMA_IMAGE_MODEL=true
OLLAMA_IMAGE_MODEL_TYPES=image/jpeg,image/png

# ============================================
# üß∞ MCP / Tool Integration
# ============================================

# Enable tool integration (true/false)
TOOL_INTEGRATION=false

# MCP server endpoint
MCP_SERVER_URL=http://localhost:8001/mcp

# MCP integration class
MCP_INTEGRATION_CLASS=MultimediaMCPIntegration

# MCP tool tags (comma-separated)
MCP_TOOL_TAGS="Image,Audio,Comfy Control,Default"

# ============================================
# ‚öôÔ∏è Limits & Performance
# ============================================

# Maximum tokens per model response
MAX_TOKENS=64000

# Maximum number of stored messages in context
MAX_MESSAGE_COUNT=15

# Total number of messages to search for context
TOTAL_MESSAGE_SEARCH_COUNT=30

# Maximum number of allowed tool calls per session
MAX_TOOL_CALLS=7

# ============================================
# üîÑ Conversation History
# ============================================

# Text that resets the conversation history
HISTORY_RESET_TEXT="Manuel Schmanuel"

# ============================================
# üß© Command Customization
# ============================================

# Optional: Custom command prefix or bot alias
COMMAND_NAME=emanuel
